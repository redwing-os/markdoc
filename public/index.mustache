<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3/dist/tailwind.min.css" rel="stylesheet"> -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/github-markdown-css/github-markdown.css">
  <link href="https://cdn.jsdelivr.net/npm/flowbite/dist/flowbite.min.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/main.css">
  <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
  <script src="scripts/copy.js"></script>
  <title>VectorDB Documentation</title>
</head>
  <body class="text-black bg-white dark:bg-black dark:text-white">
    <div class="header bg-gray-100 border-b dark:border-slate-700 dark:bg-slate-900 text-black dark:text-white">
      <div class="logo">
        <!-- <img src="/path-to-your-logo.png" alt="Logo" height="30"> -->
        <span><b><a href="https://www.redwing.ai">Redwing.ai</a></b></span>
        <span><a href="https://www.redwing.ai"> | Docs</a></span>
      </div>
      <nav>
        <span class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400">
          <a href="#">v1.0.6</a><br>
        </span>
      </nav>
    </div>

    <div class="container flex flex-col lg:flex-row">
      <!-- Sidebar that disappears on mobile sizes -->
      <div class="sidebar bg-gray-100 text-black dark:bg-black dark:text-white w-full lg:w-1/4 border-r dark:border-slate-800 lg:block hidden md:block md:hidden">
          {{> sidebar }}
      </div>
      <!-- Modal with higher z-index -->
      <div style="z-index:10" class="absolute inset-0 lg:relative lg:order-3 hidden lg:block">
          {{> modal }}
      </div>
      <!-- Main content that takes full width on mobile screens and 3/4 width on large screens and up -->
      <div class="main-content dark:border-gray-800 dark:mr-8 text-black bg-white dark:bg-black dark:text-white w-full lg:w-3/4 lg:order-1">
          {{> tab-component }}
      </div>
      <!-- Code content that takes full width on mobile screens and automatically assigned width on large screens and up -->
      <div class="code-content markdown-body border-l dark:border-gray-800 text-black bg-white dark:bg-gray-900 dark:text-white w-full lg:order-2 overflow-auto">
          {{{htmlContent}}}
      </div>      
    </div>    
    
    <script>
        const openModalButton = document.getElementById('open-terminal-button');
        const closeModalButton = document.getElementById('close-modal-button');
        const modal = document.getElementById('terminal-modal');
    
        openModalButton.addEventListener('click', () => {
        modal.classList.remove('hidden');
        });
    
        closeModalButton.addEventListener('click', () => {
        modal.classList.add('hidden');
        });
    </script>
  
    <script>
        document.querySelectorAll('.internal a').forEach(link => {
            link.addEventListener('click', function(event) {
            event.preventDefault();
    
            const language = this.getAttribute('href').substring(1);
            const markdownPath = `/docs/${language}.markdoc`;
    
            fetch(markdownPath)
                .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.text();
                })
                .then(markdown => {
                const htmlContent = marked.parse(markdown); // Use `parse` method
                document.querySelector('.code-content').innerHTML = htmlContent;
                })
                .catch(error => {
                console.error('Error fetching the markdown content:', error);
                });
            });
        });      
    </script>
  </body>
</html>
